<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:orientation="vertical"
    tools:context=".welcomescreen.WelcomeActivity">

    <io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/home_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.julianbattaglino.uishowcase.customviews.IntroVideoSurfaceView
                android:id="@+id/introsurface"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dip" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/dharma" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Dharma Mobile Studio"
                android:textAlignment="center"
                android:textColor="@color/lightorangedark"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="UI/UX SHOWCASE"
                android:textAlignment="center"
                android:textColor="@color/lightorangedark"
                android:textSize="30sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/buttonsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Desarrollado por Julian Battaglino"
            android:textColor="@color/lightorangedark"
            android:textSize="20sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ring1.json"
            app:lottie_loop="true" />


    </io.codetail.widget.RevealFrameLayout>
</LinearLayout>
