<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/ken_burns_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- We use dps for font size: we don't want our logo
    to become elarger if user has set larger txt in global
    settings. -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:alpha="0.0"
        android:src="@drawable/dharma"
        android:textSize="64dp"
        tools:ignore="SpUsage" />

    <com.julianbattaglino.uishowcase.utils.customviews.RobotoTextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.0"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Welcome!"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic" />

</RelativeLayout>