<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/martita"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#272727"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_toStartOf="@+id/image"
            android:layout_toLeftOf="@+id/image"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_condensed_bold"
            android:gravity="center"
            android:text="Traveller Profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#965C8D89"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_bold"
            android:padding="10dp"
            android:text="Marta Monteagudo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#313B3A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/block_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Followers"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#313B3A"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="left|top"
                    android:paddingLeft="10dp"
                    android:text="324K"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#313B3A" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/block_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Following"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#313B3A"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="center_horizontal|top"
                    android:padding="0dp"
                    android:text="18"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#313B3A" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/block_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Photos"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#313B3A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="right|top"
                    android:padding="0dp"
                    android:text="482"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#313B3A" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#9674B49B"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Follow"
            android:textColor="#313B3A"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#96A7D7C5"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Profile"
            android:textColor="#313B3A"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>