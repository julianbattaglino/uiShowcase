<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33313B">

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/login_wrapper_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="#FF007880"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:text="WELCOME"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFfdc57b"
                    android:textSize="35dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bg_profile"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:background="#FF62374e"
                android:gravity="center"
                android:orientation="vertical">

                <com.julianbattaglino.uishowcase.customviews.ArcImageView
                    android:id="@+id/image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@+id/linearLayout2"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/juliprofile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg_profile"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:background="#33313B"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:padding="10dp"
                    android:text="Sign in"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFfdc57b" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:text="User Credentials"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFfdc57b"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/perfil" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/username"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:hint="Username"
                    android:singleLine="true"
                    android:textColor="#B5D32A"
                    android:textColorHint="#C5C5C5" />


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/password"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#B5D32A"
                    android:textColorHint="#C5C5C5" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:background="#FF62374e"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="center_horizontal"
                    android:text="LOGIN"
                    android:textColor="#FFfdc57b" />

                <LinearLayout
                    android:id="@+id/signup_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dotted_border"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="Register"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFfdc57b" />

                    <TextView
                        android:id="@+id/text_user_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="Click Here"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFfdc57b" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </io.codetail.widget.RevealFrameLayout>
</ScrollView>