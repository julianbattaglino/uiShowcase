<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/list_item_expandable_shop_child_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_expandable_shop"
        android:orientation="horizontal">

        <com.julianbattaglino.uishowcase.utils.customviews.RobotoTextView
            android:id="@+id/list_item_expandable_shop_child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="180dp"
            android:maxLines="2"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="PAY WITH PAYPAL"
            android:textColor="@color/material_lime_900"
            android:textSize="14sp"
            app:typeface="robotoMedium" />

        <com.julianbattaglino.uishowcase.utils.customviews.MaterialDesignIconsTextView
            android:id="@+id/list_item_expandable_shop_child_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="8dp"
            android:text="@string/material_icon_to_left"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>